<h1>Edit Article</h1>

<% if @article.errors && @article.errors.length > 0 %>
  <div class="errors">
    <ul>
      <% @article.errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form onsubmit="return routes.article.patch(event, <%= @article.id %>)">
  <p>
    <label>Title:</label>
    <input type="text" name="title" value="<%= @article.title %>" required>
  </p>
  <p>
    <label>Body:</label>
    <textarea name="body" required><%= @article.body %></textarea>
  </p>
  <button type="submit">Update Article</button>
</form>

<p>
  <%= link_to "Cancel", article_path(@article) %> |
  <%= link_to "Back to Articles", articles_path %>
</p>
