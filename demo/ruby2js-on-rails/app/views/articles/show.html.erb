<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<p class="meta">
  Created: <%= @article.created_at %><br>
  Updated: <%= @article.updated_at %>
</p>

<p>
  <%= link_to "Edit", edit_article_path(@article) %> |
  <%= link_to "Back to Articles", articles_path %> |
  <a onclick="routes.article.delete(<%= @article.id %>)" style="color: red; cursor: pointer;">Delete</a>
</p>

<hr>

<h2>Comments</h2>

<% @article.comments.each do |comment| %>
  <div class="comment">
    <p><strong><%= comment.commenter %></strong> says:</p>
    <p><%= comment.body %></p>
    <button class="danger" onclick="routes.article_comment.delete(<%= @article.id %>, <%= comment.id %>)">Delete</button>
  </div>
<% end %>

<h3>Add a Comment</h3>

<form onsubmit="return routes.article_comments.post(event, <%= @article.id %>)">
  <p>
    <label>Your Name:</label>
    <input type="text" name="commenter" required>
  </p>
  <p>
    <label>Comment:</label>
    <textarea name="body" required></textarea>
  </p>
  <button type="submit">Add Comment</button>
</form>
