<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<p class="meta">
  Created: <%= @article.created_at %><br>
  Updated: <%= @article.updated_at %>
</p>

<p>
  <a onclick="navigate('/articles/<%= @article.id %>/edit')">Edit</a> |
  <a onclick="navigate('/articles')">Back to Articles</a> |
  <a onclick="deleteArticle(<%= @article.id %>)" style="color: red;">Delete</a>
</p>

<hr>

<h2>Comments</h2>

<% @article.comments().each do |comment| %>
  <div class="comment">
    <p><strong><%= comment.commenter %></strong> says:</p>
    <p><%= comment.body %></p>
    <button class="danger" onclick="deleteComment(<%= @article.id %>, <%= comment.id %>)">Delete</button>
  </div>
<% end %>

<h3>Add a Comment</h3>

<form onsubmit="return createComment(event, <%= @article.id %>)">
  <p>
    <label>Your Name:</label>
    <input type="text" id="commenter" required>
  </p>
  <p>
    <label>Comment:</label>
    <textarea id="comment_body" required></textarea>
  </p>
  <button type="submit">Add Comment</button>
</form>
